                        <a style="color: black;" class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="bi-house-fill"></i> Inicio</a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="/Account/ChangePassword"><i class="bi-briefcase"></i> Quienes Somos</a></li>
                            <li><a class="dropdown-item" href="/Account/ChangePassword"><i class="bi-envelope"></i> Contacto</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="/Account/ChangePassword"><i class="bi-card-text"></i> Licencia de Uso</a></li>
                            <li><a class="dropdown-item" href="/Account/ChangePassword"><i class="bi-info-circle"></i> Notas de la Versión</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a style="color: black;" class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="bi-hospital-fill"></i> Empresas</a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="/Empresa/Empresa"><i class="bi-building"></i> Empresa</a></li>
                            @*<li><hr class="dropdown-divider"></li>*@
                            <li><a class="dropdown-item" href="/Account/ChangePassword"><i class="bi-shop"></i> Sucursal</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a style="color: black;" class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="bi-people-fill"></i> Empleados</a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="/Account/ChangePassword"><i class="bi-person"></i> Empleado</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="/Account/ChangePassword"><i class="bi-calendar-check"></i> Dia Laborado</a></li>
                            <li><a class="dropdown-item" href="/Account/ChangePassword"><i class="bi-clock"></i> Horas Extras</a></li>
                            <li><a class="dropdown-item" href="/Account/ChangePassword"><i class="bi-clock-history"></i> Permiso</a></li>
                            <li><a class="dropdown-item" href="/Account/ChangePassword"><i class="bi-cash-coin"></i> Préstamo</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="/Account/ChangePassword"><i class="bi-calculator"></i> Nómina</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a style="color: black;" class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="bi-people-fill"></i> Contratistas</a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="/Account/ChangePassword"><i class="bi-person"></i> Contratista</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="/Account/ChangePassword"><i class="bi-hammer"></i> Actividad Realizada</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="/Account/ChangePassword"><i class="bi-calculator"></i> Nómina</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a style="color: black;" class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="bi-file-earmark-bar-graph-fill"></i> Almacén</a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="/Account/ChangePassword"><i class="bi-cart4"></i> Compras</a></li>
                            <li><a class="dropdown-item" href="/Account/ChangePassword"><i class="bi-box-arrow-right"></i> Salidas</a></li>
                            <li><a class="dropdown-item" href="/Account/ChangePassword"><i class="bi-clipboard-pulse"></i> Inventario</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="/Account/ChangePassword"><i class="bi-truck"></i> Proveedor</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a style="color: black;" class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="bi-gear-fill"></i> Configuración</a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="/Account/ChangePassword"><i class="bi-person"></i> Usuario</a></li>
                            <li><a class="dropdown-item" href="/Account/ChangePassword"><i class="bi-box-arrow-right"></i> País</a></li>
                            <li><a class="dropdown-item" href="/Account/ChangePassword"><i class="bi-clipboard-pulse"></i> Ciudad</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="/Account/ChangePassword"><i class="bi-truck"></i> Permiso Usuario</a></li>
                        </ul>
                    </li>
                </ul>
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item dropdown">
                        <a style="color: black; font-weight:bold" class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="bi-person-circle"></i> Cuenta</a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="/Account/ChangePassword"><i class="bi-file-earmark-person"></i> Información Usuario</a></li>
                            <li><a class="dropdown-item" href="/Account/ChangePassword"><i class="bi-key"></i> Cambiar Contraseña</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="javascript:Loguot()"><i class="bi-x-circle"></i> Cerrar Sesión</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content" style="margin-top:20px">
        @RenderBody()
        @*<hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>*@
    </div>

    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>